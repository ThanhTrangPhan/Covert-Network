  "version": "2.0.0",
  "tasks": [
    {
        "label": "tasks",
        "type": "shell",
        "command": "make",
        "group": "build",
        "problemMatcher": []
    },
    {
        "type": "cppbuild",
        "label": "C/C++: cpp build active file",
        "command": "/usr/bin/cpp",
        "args": [
            "-fdiagnostics-color=always",
            "-g",
            "${file}",
            "-o",
            "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "options": {
            "cwd": "${fileDirname}"
        },
        "problemMatcher": [
            "$gcc"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "detail": "compiler: /usr/bin/cpp"
    }
]
}
